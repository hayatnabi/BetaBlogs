              <div class="container">
                  <div style="display: flex; align-items: center; justify-content: center; gap: 0px;">
                      <img src="https://cdn-icons-png.flaticon.com/128/9852/9852209.png" alt="Logo" width="50">
                      <h1 style="margin: 0;">betablogs.pk</h1>
                      <h6 style="margin: 0; align-self: flex-end; margin-bottom: 7px;">v1.0</h6>
                  </div>

                  <div class="tag-cloud mt-4">
                      <span class="fs-md">article</span>
                      <span class="fs-sm">blogging</span>
                      <span class="fs-xl blogpost-tag">blogpost</span>
                      <span class="fs-md">breakdown</span>
                      <span class="fs-sm">case study</span>
                      <span class="fs-sm">checklist</span>
                      <span class="fs-lg content-tag">content</span>
                      <span class="fs-xl">copywriting</span>
                      <span class="fs-md">draft</span>
                      <span class="fs-md">editor</span>
                      <span class="fs-md">feature</span>
                      <span class="fs-xl">headline</span>
                      <span class="fs-lg">ideas</span>
                      <span class="fs-lg">insights</span>
                      <span class="fs-xl">interview</span>
                      <span class="fs-sm">journal</span>
                      <span class="fs-sm">layout</span>
                      <span class="fs-sm">listicle</span>
                      <span class="fs-sm">meta</span>
                      <span class="fs-sm">outline</span>
