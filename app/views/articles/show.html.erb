<div class="container my-5">
  <div class="card shadow-sm p-4">
    <h1 class="text-center mb-4">Article Details</h1>
    <p><strong>Title:</strong> <span class="text-muted"><%= @article.title %></span></p>
    <p><strong>Description:</strong> <span class="text-muted"><%= @article.description %></span></p>
    <div class="mt-4">
      <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-secondary me-2" %>
      <%= link_to 'Delete', article_path(@article),
                  data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this article?' },
                  class: "btn btn-outline-danger me-2" %>
      <%= link_to 'Show All Articles', articles_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>
