<h1>Articles Listing</h1>

<table>
    <th>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </th>

    <tb>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td><%= link_to 'Show', article_path(article) %></td>
                <td><%= link_to 'Edit', edit_article_path(article.id) %></td>  
                <td> <%= link_to 'Delete', article_path(article.id),
                      data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this article?' },
                      class: "delete-button" %>
                </td>
            </tr>
        <% end %>
    </tb>
</table>

<br><br><br>
<button id="add-article-btn">Add New Article</button>

<script>
  document.getElementById("add-article-btn").addEventListener("click", function() {
    window.location.href = "<%= new_article_path %>";
  });
</script>
